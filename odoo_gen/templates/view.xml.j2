<odoo>
    <record id="view_{{ model_underscore }}_list" model="ir.ui.view">
        <field name="name">{{ model_str }}.list</field>
        <field name="model">{{ model }}</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_{{ model_underscore }}_form" model="ir.ui.view">
        <field name="name">{{ model_str }}.form</field>
        <field name="model">{{ model }}</field>
        <!-- <field name="inherit_id" ref=""/> -->
        <!-- <field name="mode">primary</field> -->
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="{{ action_id }}" model="ir.actions.act_window">
        <field name="name">{{ model_str }}</field>
        <field name="res_model">{{ model }}</field>
        <!-- <field name="path"></field> -->
        <!-- <field name="search_view_id" ref=""/> -->
        <!-- <field name="context">{
            'search_default_': 1,
        }</field> -->
        <field name="view_mode">list,form</field>
    </record>
</odoo>
